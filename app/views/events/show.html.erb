<h2><%= @event.name %> の出欠確認 </h2>

<h4>詳細</h4>
<blockquote>
<p><%= simple_format( h @event.description ) %></p>
</blockquote>

<h4>候補日</h4>
<table class="table">
  <tr>
    <th>名前</th>
    <% @event.plan.split(/\t/).each do |p| %>
      <th><%= p %></th>
    <% end %>
    <th>コメント</th>
  </tr>
  <% @attendances.each do |a| %>
    <tr>
      <td><%= a.user_name %></td>
      <% a.mytime.split(/\t/).each do |t| %>
        <td><%= display_status t.to_i %></td>
      <% end %>
      <td><%= a.comment %></td>
    </tr>
    <% end %>
  <table>
  <p>
  <%= link_to "あなたの予定を登録する", { :controller => "attendances", :action => "new", :url_param => @event.url_param}, {:class => "btn  btn-primary"} %>
  </p>
